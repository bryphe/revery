(library
 (name harfbuzz)
 (public_name harfbuzz)
 (libraries skia ctypes)
 (library_flags
  (:include flags.sexp))
 (c_flags (:include c_flags.sexp))
 (cxx_flags (:include cxx_flags.sexp))
 (cxx_names harfbuzz))

(rule
 (targets c_flags.sexp cxx_flags.sexp flags.sexp)
 (deps
  (:discover config/discover.exe))
 (action
  (run %{discover})))
